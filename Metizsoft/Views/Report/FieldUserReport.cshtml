@model Metizsoft.Data.ViewModal.FieldUserViewModel
@{
    ViewBag.Title = "FieldUserReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">FieldUser Report</h3>
    </div>

    <form class="form-horizontal" id="frmfielduser">
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">From</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtfrom">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">To</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtTo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Area" class="col-sm-4 control-label">User</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.User, "Id", "FullName"), "Select User", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">DOB</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="DOB">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">DOW</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="DOW">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">DOJ</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="DOJ">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Area" class="col-sm-4 control-label">Head Quater</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.AreaId, new SelectList(ViewBag.Area, "AreaId", "AreaName"), "Select Head Quater", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Area" class="col-sm-4 control-label">Designation</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.RoleId, new SelectList(ViewBag.WorkWith, "RoleId", "RoleName"), "Select Designation", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                   
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="User" class="col-sm-4 control-label">Manager<span class="red">*</span></label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.manager, new SelectList(ViewBag.Manager, "Id", "FullName"), "Select Manager", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="User" class="col-sm-4 control-label">Reporting To<span class="red">*</span></label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.Reportingto, new SelectList(ViewBag.Manager, "Id", "FullName"), "Select Reporting To", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="CaseName" class="col-sm-4 control-label">Division</label>
                            <div class="col-sm-8">
                                <select name="CaseName" id="CaseName" class="form-control">
                                    <option value="" selected>Select</option>
                                    <option value="1">Blaze</option>
                                    <option value="2">Magnar</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="RetailerCode" class="col-sm-4 control-label">Employee Code</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="EmployeeCode" id="EmployeeCode" placeholder="Employee Code">
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
        </div>


        <div class="box-footer ">
            <div class="pull-right">
                <button type="button" id="btncancel" class="btn btn-default">Cancel</button>
                <button type="button" id="btnsearch" class="btn btn-info">Search</button>
            </div>
        </div>

    </form>

    <div id="lstfielduser">

    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>


    function loadhtml() {
        //debugger;
        var model = new Object();
        model.StartDate = $("#txtfrom").val();
        model.EndDate = $("#txtTo").val();
        model.UserId = $("#UserId").val();
        model.RoleId = $("#RoleId").val();
        model.AreaId = $("#AreaId").val();
        model.DOB = $("#DOB").val();
        model.DOW = $("#DOW").val();
        model.DOJ = $("#DOJ").val();
        model.CaseName = $("#CaseName").val();
        model.EmployeeCode = $("#EmployeeCode").val();
        model.DOJ = $("#DOJ").val();
        model.manager = $("#manager").val();
        model.managerName = $("#manager :selected").text(); // do not delete
        model.Reportingto = $("#Reportingto").val();
        model.ReportingName = $("#Reportingto :selected").text(); // do not delete
        $.ajax({
            url: '@Url.Action("FieldUserReportList")',
            type: 'POST',
            data: { 'model': model },
            cache: false,
        }).done(function (result) {
            $('#lstfielduser').html(result);
        });
    }

    $("#btnsearch").click(function () {
        loadhtml();
    });

    $("#btncancel").click(function () {
        clearform();
    });

    function clearform() {
        $("#frmfielduser").find("input").val("");
        $("#UserId").val("").trigger("change");
        $("#RoleId").val("").trigger("change");
        $("#AreaId").val("").trigger("change");
        $("#manager").val("").trigger("change");
        $("#Reportingto").val("").trigger("change");
        $("#CaseName").val("").trigger("change");        

    }
</script>







