@model Metizsoft.Data.Modal.RetailerReport_Mst

@{
    ViewBag.Title = "RetailerReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Retailer</h3>
    </div>
    <form class="form-horizontal" id="frmretailer">
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">From</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtfrom">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">To</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtTo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Dob" class="col-sm-4 control-label">Dob</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="DOB">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Anniversary" class="col-sm-4 control-label">Anniversary</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="Anniversary">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Retailer" class="col-sm-4 control-label">Retailer</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.ReatailerId, new SelectList(ViewBag.Retailer, "ReatailerId", "FullName"), "Select FullName", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="RetailerCode" class="col-sm-4 control-label">Retailer Code</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="RetailerCode" id="RetailerCode" placeholder="Retailer Code">
                            </div>
                        </div>
                    </div>                    
                </div>
               
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Head Quater</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="AreaName" id="AreaName" placeholder="HeadQuater">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Area</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="SubAreaName" id="SubAreaName" placeholder="Area">
                            </div>
                        </div>
                    </div>                 
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="CustomerType" class="col-sm-4 control-label">Outlet Type</label>
                            <div class="col-sm-8">
                                <select name="Usertype" id="Usertype" class="form-control" tabindex="14" required>
                                    <option value="" selected>Select</option>
                                    <option value="1">Chemist</option>
                                    <option value="2">Stockist</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="CaseName" class="col-sm-4 control-label">Division</label>
                            <div class="col-sm-8">
                                <select name="CaseName" id="CaseName" class="form-control">
                                    <option value="" selected>Select</option>
                                    <option value="1">Blaze</option>
                                    <option value="2">Magnar</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Contact Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="ContactName" id="ContactName" placeholder="ContactName" required>
                            </div>
                        </div>
                    </div>

                    </div>
                </div>
        </div>


        <div class="box-footer ">
            <div class="pull-right">
                <button type="button" id="btncancel" class="btn btn-default">Cancel</button>
                <button type="button" id="btnsearch" class="btn btn-info">Search</button>
            </div>
        </div>

    </form>

    <div id="lstretailer">

    </div>

</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function loadhtml() {

        //debugger;
        var model = new Object();
        model.StartDate = $("#txtfrom").val();
        model.EndDate = $("#txtTo").val();
        model.ReatailerId = $("#ReatailerId").val();
        model.AreaName = $("#AreaName").val();
        model.SubAreaName = $("#SubAreaName").val();
        model.Usertype = $("#Usertype").val();
        model.DOB = $("#DOB").val();
        model.Anniversary = $("#Anniversary").val();
        model.CaseName = $("#CaseName").val();
        model.ContactName = $("#ContactName").val();
        model.RetailerCode = $("#RetailerCode").val();
        
        $.ajax({
            url: '@Url.Action("RetailerReportList")',
            type: 'POST',
            data: { 'model': model },
            cache: false,
        }).done(function (result) {
            $('#lstretailer').html(result);
        });
    }

    $("#btnsearch").click(function () {
        loadhtml();
    });

    $("#btncancel").click(function () {
        clearform();
    });

    function clearform() {
        $("#frmretailer").find("input").val("");
        $("#ReatailerId").val("").trigger("change");
        $("#AreaId").val("").trigger("change");
        $("#SubAreaId").val("").trigger("change");
        $("#Usertype").val("").trigger("change");
        $("#CaseName").val("").trigger("change");
        

    }
