@model List<Metizsoft.Data.ViewModal.ExpenditureResponse>

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Expenditure List</h3>
    </div>

    <div class="box-body table-scrollable1">
        <table id="ListDataTable" class="table table-bordered table-striped" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>ExpenserName</th>
                    <th>ExpenserImage</th>
                    <th>Date</th>
                    <th>Amount</th>
                  
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td id="row" @item.ExpenserReportId>
                            @item.UserName
                        </td>
                        <td>
                            @item.ExpenserName
                        </td>
                        <td>
                            @item.ExpenserImage
                        </td>
                        <td>
                            @item.Date.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @item.Amount
                        </td>
                    </tr>
                }


            </tbody>

        </table>
    </div>

</div>


<script>
    $("#ListDataTable").DataTable({
        'aoColumnDefs': [{
            'bSortable': false,
            'aTargets': ['nosort'] /* 1st one, start by the right */

        }]
    });
</script>