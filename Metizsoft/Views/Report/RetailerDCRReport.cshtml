@model Metizsoft.Data.ViewModal.RetailerDCRViewModel
    @{
        ViewBag.Title = "RetailerDCRReport";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Retailer DCR</h3>
        </div>

        <form class="form-horizontal" id="frmdoctor">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="AssignedDate" class="col-sm-4 control-label">From</label>
                                <div class="col-sm-8">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right datepicker" id="txtfrom">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="AssignedDate" class="col-sm-4 control-label">To</label>
                                <div class="col-sm-8">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right datepicker" id="txtTo">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="WorkType" class="col-sm-4 control-label">Work Type</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.WorkTypeId, new SelectList(ViewBag.WorkType, "WorkTypeId", "WorkType"), "Select Work Type", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Area" class="col-sm-4 control-label">User</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.User, "Id", "FullName"), "Select User", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Area" class="col-sm-4 control-label">Head Quater</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.AreaID, new SelectList(ViewBag.Area, "AreaId", "AreaName"), "Select Head Quater", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Area" class="col-sm-4 control-label">Area</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.SubAreaId, new SelectList(ViewBag.SubArea, "AreaId", "SubAreaName"), "Select Area", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="VehicleNo" class="col-sm-4 control-label">Product Name</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.ProductId, new SelectList(ViewBag.Product, "ProductId", "ProductName"), "Select Product", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="VehicleNo" class="col-sm-4 control-label">Product Type</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.ProductTypeId, new SelectList(ViewBag.ProductType, "ProductTypeId", "ProductType"), "Select Product Type", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="CaseName" class="col-sm-4 control-label">Division</label>
                                <div class="col-sm-8">
                                    <select name="CaseName" id="CaseName" class="form-control">
                                        <option value="" selected>Select</option>
                                        <option value="1">Blaze</option>
                                        <option value="2">Magnar</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-4 control-label">VisitSection</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="VisitSection" id="VisitSection" placeholder="VisitSection">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Area" class="col-sm-4 control-label">Work With</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.WorkWithId, new SelectList(ViewBag.WorkWith, "RoleId", "RoleName"), "Select WorkWith", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="box-footer ">
                <div class="pull-right">
                    <button type="button" id="btncancel" class="btn btn-default">Cancel</button>
                    <button type="button" id="btnsearch" class="btn btn-info">Search</button>
                </div>
            </div>

        </form>

        <div id="lstretailer">

        </div>

    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function loadhtml() {
            //debugger;
            var model = new Object();
            model.StartDate = $("#txtfrom").val();
            model.EndDate = $("#txtTo").val();
            model.WorkTypeId = $("#WorkTypeId").val();
            model.UserId = $("#UserId").val();
            model.AreaID = $("#AreaID").val();
            model.SubAreaId = $("#SubAreaId").val();
            model.ProductId = $("#ProductId").val();
            model.ProductTypeId = $("#ProductTypeId").val();
            model.CaseName = $("#CaseName").val();
            model.VisitSection = $("#VisitSection").val();
            model.WorkWithId = $("#WorkWithId").val();
            $.ajax({
                url: '@Url.Action("RetailerDCRReportList")',
                type: 'POST',
                data: { 'model': model },
                cache: false,
            }).done(function (result) {
                $('#lstretailer').html(result);
            });
        }

        $("#btnsearch").click(function () {
            loadhtml();
        });

        $("#btncancel").click(function () {
            clearform();
        });

        function clearform() {
            $("#frmdoctor").find("input").val("");
            $("#WorkTypeId").val("").trigger("change");
            $("#UserId").val("").trigger("change");
            $("#AreaID").val("").trigger("change");
            $("#SubAreaId").val("").trigger("change");
            $("#ProductId").val("").trigger("change");
            $("#ProductTypeId").val("").trigger("change");
            $("#CaseName").val("").trigger("change");
            $("#WorkWithId").val("").trigger("change");
        }
    </script>
