@model Metizsoft.Data.ViewModal.DoctorFieldUserResponse

@{
    ViewBag.Title = "DoctorFieldUserReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Doctor FieldUser Report</h3>
    </div>

    <form class="form-horizontal" id="frmdoctor">
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">From</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtfrom">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">To</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtTo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Doctorcode" class="col-sm-4 control-label">Doctor Code</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="DoctorCode" id="DoctorCode" placeholder="DoctorCode">
                            </div>
                        </div>

                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">User Name</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.User, "Id", "FullName"), "Select User Name", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">Product Name</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.ProductId, new SelectList(ViewBag.Product, "ProductId", "ProductName"), "Select Product", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">Doctor Name</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.DoctorId, new SelectList(ViewBag.Doctor, "DoctorId", "DoctorName"), "Select Doctor", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Doctorcode" class="col-sm-4 control-label">Grade Name</label>
                            <div class="col-sm-8">
                                <select name="GradeName" id="GradeName" class="form-control">
                                    <option value="" selected>Select GradeName</option>
                                    <option value="1">VP</option>
                                    <option value="2">VIP</option>
                                    <option value="3">VVIP</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    @*<div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">DivisionName</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="DivisionName" id="DivisionName" placeholder="DivisionName">
                            </div>

                        </div>
                    </div>*@
                    <div class="col-md-5">
                            <div class="form-group">
                                <label for="CaseName" class="col-sm-4 control-label">Division</label>
                                <div class="col-sm-8">
                                    <select name="CaseName" id="CaseName" class="form-control">
                                        <option value="" selected>Select</option>
                                        <option value="1">Blaze</option>
                                        <option value="2">Magnar</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Category Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="CategoryName" id="CategoryName" placeholder="Category Name">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">Product Type</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.ProductTypeId, new SelectList(ViewBag.ProductType, "ProductTypeId", "ProductType"), "Select Product Type", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Head Quater</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="AreaName" id="AreaName" placeholder="HeadQuater">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Area</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="SubAreaName" id="SubAreaName" placeholder="Area">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="box-footer ">
            <div class="pull-right">
                <button type="button" id="btncancel" class="btn btn-default">Cancel</button>
                <button type="button" id="btnsearch" class="btn btn-info">Search</button>
            </div>
        </div>

    </form>

    <div id="lstDoctor">

    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function loadhtml() {

        //debugger;
        var model = new Object();
        model.StartDate = $("#txtfrom").val();
        model.EndDate = $("#txtTo").val();
        model.DoctorCode = $("#DoctorCode").val();
        model.ProductId = $("#ProductId").val();
        model.DoctorId = $("#DoctorId").val();
        model.UserId = $("#UserId").val();
        model.CategoryName = $("#CategoryName").val();
        model.GradeName = $("#GradeName").val();
        model.CaseName = $("#CaseName").val();
        model.AreaName = $("#AreaName").val();
        model.SubAreaName = $("#SubAreaName").val();
        model.ProductTypeId = $("#ProductTypeId").val();

        $.ajax({
            url: '@Url.Action("DoctorFieldUserReportList")',
            type: 'POST',
            data: { 'model': model },
            cache: false,
        }).done(function (result) {
            $('#lstDoctor').html(result);
        });
    }

    $("#btnsearch").click(function () {
        loadhtml();
    });
    $("#btncancel").click(function () {
        clearform();
    });

    function clearform() {
        $("#frmdoctor").find("input").val("");
        $("#DoctorId").val("").trigger("change");
        $("#ProductId").val("").trigger("change");
        $("#UserId").val("").trigger("change");
        $("#GradeName").val("").trigger("change");
        $("#CaseName").val("").trigger("change");
        $("#ProductTypeId").val("").trigger("change");

    }

