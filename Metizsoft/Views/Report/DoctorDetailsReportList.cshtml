@model List<Metizsoft.Data.ViewModal.DoctorDetailsResponce>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Doctor Details List</h3>
    </div>

    <div class="box-body table-scrollable1">
        <table id="ListDataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="nosort">DoctorName</th>
                    <th class="nosort">DoctorCode</th>
                    <th class="nosort">GradeName</th>
                    <th class="nosort">CategoryName</th>
                    <th class="nosort">PhoneNo</th>
                    <th class="nosort">Add1</th>
                    <th class="nosort">Add2</th>
                    <th class="nosort">Add3</th>
                    <th class="nosort">Add4</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td id="row" @item.DoctorId>
                            @item.DoctorName
                        </td>
                        <td>
                            @item.DoctorCode
                        </td>
                        @if (item.GradeName == 1)
                        {
                            <td> VP </td>
                        }
                        else if (item.GradeName == 2)
                        {
                            <td> VIP </td>
                        }
                        else
                        {
                            <td> VVIP </td>
                        }
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @item.PhoneNo
                        </td>
                        <td>
                            @item.Add1
                        </td>
                        <td>
                            @item.Add2
                        </td>
                        <td>
                            @item.Add3
                        </td>
                        <td>
                            @item.Add4
                        </td>
                    </tr>
                }


            </tbody>

        </table>
    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).on('ready', function () {
        $('#ListDataTable').dataTable({
            "scrollX": true
        });
    });
</script>