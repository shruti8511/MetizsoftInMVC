@model List<Metizsoft.Data.ViewModal.DoctorDCRViewModel>

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Doctor DCR Report List</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-scrollable1">
        <table id="ListDataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th >DrCode</th>
                    <th >DoctorName</th>
                    <th >Head Quater</th>
                    <th >Area</th>
                    <th >VisitSection</th>
                    <th >Prescription</th>
                    <th >Product</th>
                    <th >Product Type</th>
                    <th >Medicine Type</th>
                    <th >Division</th>
                    <th >Rx Type</th>
                    <th >MeasureIn</th>
                    <th >StrangthIn</th>
                    <th >Quantity</th>
                    <th >Field UserName</th>
                    <th >Work Type</th>
                    <th >Designation</th>
                    <th  style="width:70px !important">Date</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td id="row" @item.DCRId>
                            @item.DoctorCode
                        </td>
                        <td>
                            @item.DoctorName
                        </td>
                        <td>
                            @item.AreaName
                        </td>
                        <td>
                            @item.SubAreaName
                        </td>
                        <td>
                            @item.VisitSection
                        </td>
                        <td>
                            @item.Prescription
                        </td>
                        <td>
                            @item.ProductName
                        </td>
                        <td>
                            @item.ProductType
                        </td>
                        <td>
                            @item.Medicine
                        </td>
                        @if (item.CaseName == 1)
                        {
                            <td>Blaze</td>
                        }
                        else if (item.CaseName == 2)
                        {
                            <td>Magnar</td>
                        }
                        else
                        {
                            <td></td>
                        }
                       <td>
                           @item.Name
                       </td>
                        <td>
                            @item.MeasureIn
                        </td>
                        <td>
                            @item.StrangthIn
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.WorkType
                        </td>
                        <td>
                            @item.RoleName
                        </td>
                        <td>
                            @item.Date.ToString("dd-MM-yyyy")
                        </td>
                    </tr>
                }


            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>
<script>
    $("#ListDataTable").DataTable({
        "scrollX": true
    });
</script>