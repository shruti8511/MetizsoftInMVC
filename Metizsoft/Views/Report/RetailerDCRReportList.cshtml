@model List<Metizsoft.Data.ViewModal.RetailerDCRViewModel>

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Retailer DCR Report List</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-scrollable1">
        <table id="ListDataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Retailer Name</th>
                    <th>Head Quater</th>
                    <th>Area</th>
                    <th>VisitSection</th>
                    <th>Product Type</th>
                    <th>Medicine Type</th>
                    <th>Product Name</th>
                    <th>Division</th>
                    <th>Rx Type</th>
                    <th>MeasureIn</th>
                    <th>StrangthIn</th>
                    <th>Field User</th>
                    <th>Work Type</th>
                    <th>Designation</th>
                    <th style="width:70px !important">Date</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td id="row" @item.DCRId>
                            @item.FullName
                        </td>
                        <td>
                            @item.AreaName
                        </td>
                        <td>
                            @item.SubAreaName
                        </td>
                        <td>
                            @item.VisitSection
                        </td>
                        <td>
                            @item.ProductType
                        </td>
                        <td>
                            @item.Medicine
                        </td>
                        <td>
                            @item.ProductName
                        </td>
                        @if (item.CaseName == 1)
                        {
                            <td>Blaze</td>
                        }
                        else if (item.CaseName == 2)
                        {
                            <td>Magnar</td>
                        }
                        else
                        {
                            <td></td>
                        }
                       <td>
                           @item.Name
                       </td>
                        <td>
                            @item.MeasureIn
                        </td>
                        <td>
                            @item.StrangthIn
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.WorkType
                        </td>
                        <td>
                            @item.RoleName
                        </td>
                        <td>
                            @item.Date.ToString("dd-MM-yyyy")
                        </td>
                    </tr>
                }


            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>
<script>
    $("#ListDataTable").DataTable({
        "scrollX": true
    });
</script>