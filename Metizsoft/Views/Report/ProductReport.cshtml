@model Metizsoft.Data.ViewModal.ProductListResponse
@{
    ViewBag.Title = "ProductListReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Product List</h3>
    </div>



    <form class="form-horizontal" id="frmdoctor">
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">From</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtfrom">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="AssignedDate" class="col-sm-4 control-label">To</label>
                            <div class="col-sm-8">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right datepicker" id="txtTo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="Area" class="col-sm-4 control-label">Product</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.ProductId, new SelectList(ViewBag.Product, "ProductId", "ProductName"), "Select Product", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>


                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="MeasureIn" class="col-sm-4 control-label">MeasureIn</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="MeasureIn" id="MeasureIn" placeholder="Measure In">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="StrangthIn" class="col-sm-4 control-label">StrangthIn</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="StrangthIn" id="StrangthIn" placeholder="Strangth In" >
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">Product Code</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="ProductCode" id="ProductCode" placeholder="ProductCode">
                            </div>
                        </div>
                    </div>                   
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">BrandName</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="BrandName" id="BrandName" placeholder="BrandName">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">PTS</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="PTS" id="PTS" placeholder="PTS" >
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="CaseName" class="col-sm-4 control-label">Division</label>
                            <div class="col-sm-8">
                                <select name="CaseName" id="CaseName" class="form-control">
                                    <option value="" selected>Select</option>
                                    <option value="1">Blaze</option>
                                    <option value="2">Magnar</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">RxType</label>
                            <div class="col-sm-8">
                                @*<input name="Name" id="Name" type="hidden" value="" />*@
                                @Html.DropDownList("NameID", new SelectList(string.Empty, "Value", "Text"), "Select Name", new { @class = "form-control" })
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="VehicleNo" class="col-sm-4 control-label">MRP</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="MRP" id="MRP" placeholder="MRP">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">STDRate</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="STDRate" id="STDRate" placeholder="STDRate">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Product Type</label>
                            <div class="col-sm-8">                                
                                @Html.DropDownListFor(m => m.ProductTypeId, new SelectList(ViewBag.ProductType, "ProductTypeId", "ProductType"), "Select ProductType", new { @class = "form-control", @required = "true" })
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
        </div>

        <div class="box-footer ">
            <div class="pull-right">
                <button type="button" id="btncancel" class="btn btn-default">Cancel</button>
                <button type="button" id="btnsearch" class="btn btn-info">Search</button>
            </div>
        </div>

    </form>

    <div id="lstDCR">

    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $("#CaseName").change(function () {
            debugger;
            var RxType = $("#CaseName").val();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetNameByRxType")',
                dataType: 'json',
                data: { RxType: RxType },
                success: function (data) {
                    debugger;

                    var district = "<select class='form-control'>";
                    district = district + '<option value="">Select Name</option>';
                    for (var i = 0; i < data.length; i++) {
                        district = district + '<option value=' + data[i].RxTypeId + '>' + data[i].Name + '</option>';
                    }
                    district = district + '</select>';
                    $('#NameID').html(district);
                    $("#NameID").val($("#name").val());
                    //$('#NameID').val();
                }
            });
        });
    });
    function loadhtml() {

        //debugger;
        var model = new Object();
        model.StartDate = $("#txtfrom").val();
        model.EndDate = $("#txtTo").val();
        model.ProductId = $("#ProductId").val();
        model.MeasureIn = $("#MeasureIn").val();
        model.StrangthIn = $("#StrangthIn").val();
        model.ProductCode = $("#ProductCode").val();
        model.ProductTypeId = $("#ProductTypeId").val();
        model.PTS = $("#PTS").val();
        model.CaseName = $("#CaseName").val();             
        model.NameID = $("#NameID").val();
        model.MRP = $("#MRP").val();
        model.STDRate = $("#STDRate").val();
        model.BrandName = $("#BrandName").val();    
        
        $.ajax({
            url: '@Url.Action("ProductReportList")',
            type: 'POST',
            data: { 'model': model },
            cache: false,
        }).done(function (result) {
            $('#lstDCR').html(result);
        });
    }

    $("#btnsearch").click(function () {
        loadhtml();
    });

    $("#btncancel").click(function () {
        clearform();
    });

    function clearform() {
        $("#frmdoctor").find("input").val("");
        $("#ProductId").val("").trigger("change");
        $("#CaseName").val("").trigger("change");
        $("#ProductTypeId").val("").trigger("change");
        $("#NameID").val("").trigger("change");

    }

