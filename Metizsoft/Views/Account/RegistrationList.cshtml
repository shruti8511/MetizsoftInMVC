<section class="content">
    <div class="row" id="divlocation">

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> Manage User</h3>
                </div>                

                <div class="box">
                    <div class="box-body table-scrollable1">
                        <div id="frmRole" class="form-horizontal">

                            <div class="col-md-12">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="HeadQuater" class="col-sm-4 control-label">Head Quater</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("AreaList", new SelectList(ViewBag.AreaList, "AreaID", "AreaName"), "Select Head Quater", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="VehicleNo" class="col-sm-4 control-label">Area Name</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("SubAreaList", new SelectList(ViewBag.SubAreaList, "AreaID", "SubAreaName"), "Select Area", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <button type="button" id="btnsearch" class="btn btn-info">Search</button>
                            </div>
                            
                            <div class="col-md-6">
                                &nbsp;
                            </div>

                            <div id="lstUser" style="clear:both !important">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $('#btnsearch').click(function () {
        debugger;
        var model = new Object();
        model.AreaID = $("#AreaList").val();
        model.SubAreaID = $("#SubAreaList").val();
        $.ajax({
            url: '@Url.Action("RegistrationLists")',
            type: 'POST',
            data: { 'model': model },
            cache: false,
        }).done(function (result) {
            debugger;
            $('#lstUser').html(result);
        });
    });

</script>

