@model Metizsoft.Data.Modal.webpages_Roles

@{
    ViewBag.Title = "ManageExpenseLimit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Manage Expense Limit
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>Home</a></li>
        @*<li><a href="#"><i class="fa fa-dashboard"></i>UserManagement</a></li>*@
        <li class="active">Expense Limit</li>
    </ol>
</section>
<section class="content">
    <div class="row" id="divlocation">

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> Manage Expense Limit</h3>
                </div>
                @*@using (Html.BeginForm("RoleCreate", "Account", FormMethod.Post, new { }))
                    {*@

                <div class="box">
                    <div class="box-body table-scrollable1">
                        <div id="frmRole" class="form-horizontal">

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="VehicleNo" class="col-sm-4 control-label">User Designation</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownList("RoleId", new SelectList(ViewBag.RoleList, "RoleId", "RoleName"), "Select Designation", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                &nbsp;
                               </div>

                            <div id="lstExpense" style="clear:both !important">

                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $('#RoleId').change(function () {
        //debugger;
        $(this).val();
        $.ajax({
            url: '@Url.Action("ManageExpenseLimitList")',
            type: 'POST',
            data: { 'RoleId': $(this).val() },
            cache: false,
        }).done(function (result) {
            $('#lstExpense').html(result);
        });
    });

</script>

